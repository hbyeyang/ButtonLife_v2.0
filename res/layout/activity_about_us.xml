<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_width_height_ff"
    android:background="@color/page_bg_gray" >

    <include
        android:id="@+id/head"
        layout="@layout/title_bar" />

    <LinearLayout
        style="@style/layout_width_height_ff"
        android:layout_below="@id/head"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:background="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/layout_width_height_ww"
                android:layout_below="@id/iv_img"
                android:layout_centerHorizontal="true"
                android:text="闪电到家"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/versaion"
                style="@style/layout_width_height_ww"
                android:layout_below="@id/tv_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/about_img_1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/about_img_2" />

            <TextView
                style="@style/layout_width_height_ww"
                android:layout_above="@id/iv_img2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:text="北京按钮云商科技有限公司"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>