<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_width_height_fw"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/rl_icon"
        style="@style/layout_width_height_fw"
        android:clickable="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <RelativeLayout
            android:id="@+id/rl_layout"
            style="@style/layout_width_height_fw"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tv_name"
                style="@style/layout_width_height_ww"
                android:text="昭阳"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_phone"
                style="@style/layout_width_height_ww"
                android:layout_alignParentRight="true"
                android:text="13264228640"
                android:textSize="16sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_address"
            style="@style/layout_width_height_fw"
            android:layout_below="@id/rl_layout"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="汉威大厦"
            android:textSize="14sp" />

        <View
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_address"
            android:background="@color/bg_gray" />

        <RelativeLayout
            android:id="@+id/rl_layout1"
            style="@style/layout_width_height_fw"
            android:layout_below="@id/line">

            <TextView
                android:id="@+id/ischeck"
                style="@style/layout_width_height_ww"
                android:layout_centerVertical="true"
                android:background="@drawable/radiobutton" />

            <TextView
                android:id="@+id/tv_text"
                style="@style/layout_width_height_ww"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/ischeck"
                android:text="设为默认"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_modify"
                style="@style/layout_width_height_ww"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/edit_address"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="编辑"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>