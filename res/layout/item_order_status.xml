<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_width_height_ww"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_shop_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:focusable="false" />

    <TextView
        android:id="@+id/tv_shop_name"
        style="@style/layout_width_height_ww"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/iv_shop_img"
        android:singleLine="true"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_total_price"
        style="@style/layout_width_height_ww"
        android:layout_below="@id/tv_shop_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_shop_img"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/layout_width_height_ww"
        android:layout_below="@id/tv_total_price"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_shop_img"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_order_status"
        style="@style/layout_width_height_ww"
        android:layout_below="@id/tv_time"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_shop_img"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_confirmation"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignBottom="@id/iv_shop_img"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/goods_receipt_default"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/title_color"
        android:textSize="12sp" />

</RelativeLayout>