<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_width_height_fw"
    android:background="@color/white"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/iv_shop_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:focusable="false" />

    <RelativeLayout
        android:id="@+id/rl_view1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iv_shop_img" >

        <RelativeLayout
            android:id="@+id/relative"
            style="@style/layout_width_height_ww" >

            <TextView
                android:id="@+id/tv_shop_name"
                style="@style/layout_width_height_ww"
                android:singleLine="true"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_business_hours"
                style="@style/layout_width_height_ww"
                android:layout_toRightOf="@id/tv_shop_name"
                android:singleLine="true"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_shop_address"
            style="@style/layout_width_height_ww"
            android:layout_below="@id/relative"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_shop_des"
            style="@style/layout_width_height_ww"
            android:layout_below="@id/tv_shop_address"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_shop_close"
        style="@style/layout_width_height_ww"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rl_view1"
        android:background="@drawable/shop_close"
        android:focusable="false"
        android:visibility="gone" />

    <ImageView
        style="@style/layout_width_height_ww"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/arrow_right"
        android:focusable="false" />

</RelativeLayout>