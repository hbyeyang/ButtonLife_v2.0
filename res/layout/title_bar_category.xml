<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@color/bg_gray" >

    <RelativeLayout
        android:id="@+id/title_bar_left"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:clickable="true" >

        <ImageView
            android:id="@+id/iv_logo"
            style="@style/layout_width_height_ww"
            android:layout_centerInParent="true"
            android:background="@drawable/arrow_back" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title_bar_center"
        style="@style/layout_width_height_ww"
        android:layout_centerInParent="true" >

        <TextView
            android:id="@+id/title_bar_tv"
            style="@style/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/title_bar_tv"
            android:background="@drawable/category_title_arrow_down" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title_bar_right"
        style="@style/layout_width_height_ww"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:clickable="true" >

        <ImageView
            android:id="@+id/iv_logo_right"
            style="@style/layout_width_height_ww"
            android:layout_centerInParent="true"
            android:background="@drawable/shop_call" />
    </RelativeLayout>

</RelativeLayout>