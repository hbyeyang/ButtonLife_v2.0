<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_width_height_ff"
    android:background="@color/bg_gray"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <View
        style="@style/line_style"
        android:layout_width="fill_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_activity_news"
                style="@style/layout_width_height_ff"
                android:gravity="center"
                android:text="@string/action_news"
                android:textSize="16sp" />

            <View
                android:id="@+id/activity_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true" 
                android:background="@color/title_color"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_system_news"
                style="@style/layout_width_height_ff"
                android:gravity="center"
                android:text="@string/system_news"
                android:textSize="16sp" />

            <View
                android:id="@+id/system_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>